.right-content{
	padding-bottom: 50px;
}

.contact-info {
    font-size: 14px;
    margin-bottom: 30px;
}
.contact-info div span span{
    color: #C11920;
    display: flex;
    margin-bottom: 10px;
}
.contact-info div span .icons {
    margin-right: 10px;
    width: 18px;
    height: 18px;
}
.icons.about-email {
    background-image: url(../images/icon-mail.png);
}
.icons.about-phone {
    background-image: url(../images/icon-phone.png);
}
.contact-info div span span span {
    padding-left: 0;
}

.contact-item-wrap {
    padding: 0;
}
.contact-item-wrap .contact-item-title {
    font-size: 18px;
    margin-bottom: 15px;
    margin-top: 30px;
}
.contact-item-wrap .info {
    color: #C11920;
}
.contact-item-wrap .contact-item-desc {
    font-size: 14px;
    color: #878787;
    margin-bottom: 18px;
}