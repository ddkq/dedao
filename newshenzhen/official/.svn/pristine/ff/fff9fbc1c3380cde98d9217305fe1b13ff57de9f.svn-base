<header>
    <div class="container clearfix">
        <h1 class="logo">
        	<a href="/"><img src="__TMPL__Public/images/logo1.png" width="215" height="48" style="display: block;"></a>
        </h1>
        <div class="alist">
	        <a class="indexa" href="/">首页</a>
	        <a class="itema" href="javascript:void(0);" id="activator">诊疗项目<i class="fa fa-caret-down"></i></a>
	        <a href="/contact.html">联系我们</a>
	        <a class="swt" href="/swt/" target="_blank">在线咨询</a>
	        <a class="tel" href="tel:4008006161"><i class="fa fa-phone"></i>400-800-6161</a>	
        </div>
        <a class="menu-activator" id="search">
        	<i class="fa fa-search"></i>
        </a>
        <a class="menu-activator" id="activator_pc">
            <span class="menu_tit">MENU</span>
            <div class="visual">
                <i class="line line01"></i>
                <i class="line line02"></i>
                <i class="line line03"></i>
            </div>
        </a>
    </div>
    <!--subclass新增 begin-->
    <div class="subclass" id="subclass_pc" style="display: none;">
        <div class="container clearfix">
            <!--subclass_nav begin-->
            <ul class="subclass_nav clearfix">
            	<volist name="nav" id="vo">
	            	<li>
	                    <a href="{$vo.href}" class="s_a1" target="{$vo.target}"><img src="{$vo.icon}">{$vo.label}</a>
	                    <volist name="vo['child']" id="vo1">
	                    	<a href="{$vo1.href}" target="{$vo1.target}">{$vo1.label}</a>
	                    </volist>
	                </li>	
            	</volist>
            </ul>
            <!--subclass_nav end-->
            <div class="ad_tech">
		    	<div class="hd">
					<a class="next1"></a>
					<a class="prev1"></a>
				</div>
				<div class="bd">
					<ul>
						<volist name="tslides" id="vo">
							<li><a href="{$vo.slide_url}" target="_blank"><img src="{:sp_get_asset_upload_path($vo['slide_pic'])}" /></a></li>	
						</volist>
					</ul>
				</div>
			</div>
        </div>
    </div>


	<div class="subclass" id="search_pc" style="display: none;">
		<i class="search_i"></i>
		<form action="{:U('portal/search/index')}" method="post">
			<input type="text" class="form-control search_text" name="keyword" placeholder="请输入关键词">
			<input type="hidden" name="type" value="1">
			<input type="submit" class="btn btn-default search_btn" value="搜索"/>
		</form>
	</div>
</header>