/*列表页样式*/
.tab-bar{padding-right: 7px;text-align: right;width: 100%;height: auto;margin-bottom: 60px;border-bottom: 1px solid #e5e5e5;overflow: visible;transition: all .3s ease 0s;position: relative;}
.tab-bar ul {height: 51px;}
.tab-bar ul li {
    position: relative;
    display: inline-block;
    font-size: 16px;
    margin-right: 70px;
    height: auto;
    line-height: 1;
    background-color: transparent;
    border-top: none;
    overflow: hidden;
}
.tab-bar ul li a {
    position: relative;
    z-index: 4;
    display: inline-block;
    color: #222;
    min-width: auto;
    padding: 18px 0;
}
.tab-bar ul li:before {
    opacity: 0;
    transition: all .3s ease 0s;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -7px;
    content: "";
    width: 0;
    height: 0;
    border: 7px solid #e5e5e5;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;
    z-index: 2;
    display: inline-block;
}
.tab-bar ul li.active:before,.tab-bar ul li:on:before {opacity: 1;}

.onenews {
    margin-bottom: 47px;
    display: flex;
    justify-content: space-between;
}
.onenews img {
    width: 294px;
    height: 180px;
}
.onenews .infomation {
    width: 650px;
    height: 180px;
    padding: 4px 44px;
}
.onenews .infomation p {
    color: #737373;
    font-size: 14px;
    line-height: 24px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.onenews .infomation h3 {
    color: #3e3e3e;
    font-size: 24px;
    line-height: 50px;
    overflow: hidden;
    white-space: nowrap;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;
}
.onenews .infomation p.news-time {
    font-size: 12px;
    color: #b5b5b5;
}
























