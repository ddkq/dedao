@charset "utf-8";
dl,dd{margin:0}
.kouqiang-live-5{width:640px;height:420px;border-radius: 8px;box-shadow: 0 0 12px rgba(0,0,0,.5); background:url("bg.jpg") no-repeat 0 0;z-index:20!important; overflow: hidden;}
.kouqiang-live-5 .bajs-live-popup-close{width:24px;height:24px;position:absolute;right:5px;top:4px;background:url(close.png) no-repeat right top;transition:transform 0.25s ease-in-out,-webkit-transform 0.25s ease-in-out;z-index:5;}
.kouqiang-live-5 .bajs-live-popup-close:hover{-webkit-transform:rotate(180deg);transform:rotate(180deg);opacity:0.8;filter:alpha(opacity=80);}
.kouqiang-live-5 .bajs-slider{position:absolute;left:0;top:0px;width:640px;height:280px;overflow:hidden;box-shadow: 0 0 12px rgba(0,0,0,.5);}
.kouqiang-live-5 .bajs-slider li{position:absolute;top:0;left:0;width:640px;height:280px;display:none;overflow:hidden;}
.kouqiang-live-5 .bajs-slider li img{width:640px;height:280px;display:block;transition:all .3s;}
.kouqiang-live-5 .bajs-slider li img:hover{transform:scale(1.06);}
.kouqiang-live-5 .pop_sent,.kouqiang-live-5 .pop_chat{width:80px;height:60px;text-align:center;line-height:60px;font-size:28px;color:#fff;border-radius:5px;position:absolute;bottom:22px;}
.kouqiang-live-5 .pop_sent{left:300px;background-color:#ff7900}
.kouqiang-live-5 .pop_chat{left:215px;background-color:#36adff;}
.kouqiang-live-5 .pop_sent small{font-size:20px;display:block;}
.kouqiang-live-5 .pop_sent:hover{opacity:0.8;filter:alpha(opacity=0.8);}
.kouqiang-live-5 .chattext{width:174px;height:48px; background-color:#fff; font-size:14px; line-height: 24px; font-family:'Microsoft Yahei';color:#999794;outline:none;border-radius:10px;padding:6px 10px;position:absolute;bottom:22px;left:12px;}
.kouqiang-live-5 .chattext:focus{border:1px solid #C5A67E}
.kouqiang-live-5 .bajs-ajax-form-action{display:none;}