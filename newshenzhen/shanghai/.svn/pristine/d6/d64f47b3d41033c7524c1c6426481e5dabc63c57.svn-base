.content-form {
    overflow: hidden;
}
.content-form, form input {
    background-color: #FEDE47;
}
.red {
    color: #ff0020;
}
.w-31 {
    width: 32%;
}
.outnumber:after, .outnumber:before {
    content: '';
    display: inline-block;
    width: 50%;
    background-color: #fff;
    position: absolute;
    height: 1px;
    top: 50%;
}
.outnumber:before {
    left: -32%;
}
.outnumber:after {
    right: -32%;
}
form input {
    border: 1px solid #99852A;
}
.submit-btn {
    background-color: #FF0000;
    border-radius: .5rem;
}
.content-btn {
	left: 0;
	right: 0;
    bottom: 3%;
    width: 70%;
}
.copy {
    display: none !important;
}
label, form div {
    font-size: 1.1rem;
}


.tab-ios {
	top: -3px;
	transform: translateY(-100%);
	left: 0;
	right: 0;
	transition: all ease 0.5s;
	z-index: 9999;
}

.tab-ios .tab-ios-box {
	box-shadow: 0 0 8px #666;
	border-radius: 10px;
	margin: 0 auto;
	z-index: 999;
	width: 97%;
	overflow: hidden;
}

.tab-ios .tab-wx {
	padding: 0.5% 2% 0.5% 2%;
	display: flex;
	justify-content: space-between;
	font-size: 14px;
	line-height: 30px;
	background: rgba(255, 255, 255, 1);
}

.tab-ios .tab-wx span i {
	width: 14.8%;
	margin-right: 3px;
}

.tab-ios .tab-wx span i img {
	width: 100%;
	max-width: 100%;
	height: auto;
}

.tab-ios .bot-wx {
	padding: 1% 3%;
	font-size: 14px;
	background: rgba(255, 255, 255, 0.9);
	color: #333;
}

.tab-ios .swiper-container {
	height: 21px;
}

.open {
	top: 0.5rem;
	transform: translateY(0);
}