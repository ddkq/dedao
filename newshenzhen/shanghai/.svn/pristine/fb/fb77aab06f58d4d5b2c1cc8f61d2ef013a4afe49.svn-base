<admintpl file="header" />
<link href="__PUBLIC__/simpleboot/css/from.css" rel="stylesheet">
<script src="__PUBLIC__/js/from1.js"></script>
</head>
<style>
	.second td:first-child{
		padding-left: 60px;
	}
	.add-table {
	    margin-top: 15px;
	    margin-bottom: 15px;
	}
	.add-table a {
	    border: 1px solid #60a3f5;
	    color: #60a3f5;
	    line-height: 18px;
	    padding: 9px 16px;
	    border-radius: 4px;
	    display: inline-block;
	}
	.add-line {
		margin: 0;
	}
	.table-box table {
		margin-bottom: 15px;
	}
</style>
<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('AdminQuestionnaire/index')}" target="_self">问卷管理</a></li>
			<li class="active"><a href="javascript:;">修改问卷</a></li>
		</ul>
		<div class="flex content">
			<form action="{:U('AdminQuestionnaire/edit_post')}" method="post" class="form-horizontal js-ajax-forms" enctype="multipart/form-data">
				<div class="content-left">
					<div class="from-name">
						<span>问卷名<i class="red"> *</i></span>
						<input type="hidden" name="id" value="{$post.id}" />
						<span class="name-input">
							<input type="text" name="title" placeholder="{$post.title}" value="{$post.title}">
						</span class="name-input">
					</div>
					<p>设置问卷内容</p>
					<div class="table-box">
						<volist name="content" id="vo">
							<table>
								<thead>
									<tr class="title">
										<th>标题</th>
										<th>类型</th>
										<th>是否必填</th>
										<th>操作</th>
									</tr>
								</thead>
								<tr class="first">
									<td class="name"><input type="text" name="content[0][name]" value="{$vo.name}"></td>
									<td class="type">
										<select name="content[0][type]" id="select" value="{$vo.type}"></select>
									</td>
									<td class="must">
										<div class="cheakbox">
											<php>$is_must = $vo['is_must'] == 1?"checked":"";</php>
											<span class="{$is_must}"><i></i></span>
											<input type="hidden" name="content[0][is_must]" value="{$vo.is_must}">
										</div>
									</td>
									<td></td>
								</tr>
								<volist name="vo[children]" id="vo1">
									<tr class="second">
										<td class="name"><input type="text" name="content[0][children][0][name]" value="{$vo1.name}"></td>
										<td class="type">选项</td>
										<td class="must"></td>
										<td class="ctr">
											<span class="btn btn-default delete" title="删除">
												<i class="fa fa-trash-o"></i>
											</span>
										</td>
									</tr>	
								</volist>
								
								<tr class="second">
									<td><div class="add-line"><a href="javascript:;"><i>+</i>增加一个选项</a></div></td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
							</table>	
						</volist>
						
						
					</div>
				</div>
				
				<div class="add-table"><a href="javascript:;"><i>+</i>增加问题</a></div>
				
				
				<div class="form-actions">
					<button class="btn btn-primary js-ajax-submit" type="submit">保存</button>
					<a class="btn" href="{:U('AdminQuestionnaire/index')}">返回</a>
				</div>
			</form>
			
		</div>
	</div>

</body>
</html>

