.banner {
	margin-top: 120px;
}



form font{
	width: 30%;
	background-color: #e0e0e0;
	font-size: .9rem;
	color: #000;
	text-align: center;
}
.active {
	background-color: #d10101 !important;
	color: #fff !important;
}


.submit-btn {
	border-radius: 15px;
	background-color: #d10101;
}

.icon {
    width: 39px;
    height: 37px;
	background: url(imgs/icon.png);
	vertical-align: middle;
}
.title {
  	background: linear-gradient(to bottom, #F1402A, #AA210C);
    -webkit-background-clip: text;
    color: transparent;
}
.bcg {
	background: #FAE9E4;
}
.active {
	background-color: #c11920 !important;
}


.bg-pink{
	background: #fcf2f1;
}

.date {
	font-size: 1rem;
}
.date span{
	background: #D10101;
	width: 3rem;
	height: 3rem;
	vertical-align: middle;
	line-height: 2.7rem;
    border-radius: .5rem;
    display: inline-block;
    text-align: center;
    color: #fff;
    font-size: 2rem;
    margin: 0 .25rem;
}
.number {
	background-color: #D10101;
    font-size: 1.25rem;
    z-index: 1;
}
.red-border {
	border: 3px solid #D10101;
	height: 4.75rem;
    top: 7px;
    width: 105%;
    left: -9px;
}