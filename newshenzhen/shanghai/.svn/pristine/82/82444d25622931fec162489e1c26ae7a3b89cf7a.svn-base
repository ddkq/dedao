.banner {
	margin-top: 120px;
}

.w-35{
	width: 35%;
}

.num h1{
	border-radius: 8px;
	background-color: rgb(77, 32, 35);
	font-size: 4rem;
}
.num span{
	color: rgb(77, 32, 35);
	font-size: 1.2rem;
}

form label{
	font-size: 1.1rem;
}

form span input{
	width: 15px;
	height: 15px;
}


.submit-btn {
	border-radius: 15px;
	background-color: #d10101;
	font-size: 1.45rem;
}

.icon {
    width: 39px;
    height: 37px;
	background: url(imgs/icon.png);
	vertical-align: middle;
}
.title {
  	background: linear-gradient(to bottom, #F1402A, #AA210C);
    -webkit-background-clip: text;
    color: transparent;
}
.bcg {
	background: #FAE9E4;
}
.active {
	background-color: #c11920 !important;
}


.bg-pink{
	background: #fcf2f1;
}

.date {
	font-size: 1rem;
}
.date span{
	background: #D10101;
	width: 3rem;
	height: 3rem;
	vertical-align: middle;
	line-height: 2.7rem;
    border-radius: .5rem;
    display: inline-block;
    text-align: center;
    color: #fff;
    font-size: 2rem;
    margin: 0 .25rem;
}
.number {
	background-color: #D10101;
    font-size: 1.25rem;
    z-index: 1;
}
.red-border {
	border: 3px solid #D10101;
	height: 4.75rem;
    top: 7px;
    width: 105%;
    left: -9px;
}

.swiper-pagination-bullet{
	margin: 0 0.2rem;
	width: 12px;
	height: 12px;
	background: #eb898f;
	opacity: 1;
}

.swiper-pagination-bullet-active{
	background: #fff;
}

.swiper01{
	 background: linear-gradient(#ee372a, #d6131e); 
}

.swiper02 .swiper-pagination-bullet{
	background: #bd7f83;
}
.swiper02 .swiper-pagination-bullet-active{
	background: #7c0008;
}