						<tr><th><b>状态</b></th></tr>
						<tr>
							<td>
								<label class="radio"><input type="radio" name="post[post_status]" value="1" checked>审核通过</label>
								<label class="radio"><input type="radio" name="post[post_status]" value="0">待审核</label>
							</td>
						</tr>
						<tr>
							<td>
								<label class="radio"><input type="radio" name="post[istop]" value="1">置顶</label>
								<select name="post[istop_type]" style="display: none;">
									<option value="0" selected="selected">请选择</option>
									<foreach name="istop_type" item="vo">
										<option value="{$vo.cid}">{$vo.cat_name}</option>
									</foreach>
								</select>
								<label class="radio"><input type="radio" name="post[istop]" value="0" checked>未置顶</label>
							</td>
						</tr>
						<tr>
							<td>
								<label class="radio"><input type="radio" name="post[recommended]" value="1">推荐</label>
								<select name="post[recommended_type]" style="display: none;">
									<option value="0" selected="selected">请选择</option>
									<foreach name="recommended_type" item="vo">
										<option value="{$vo.cid}">{$vo.cat_name}</option>
									</foreach>
								</select>
								<label class="radio"><input type="radio" name="post[recommended]" value="0" checked>未推荐</label>
							</td>
						</tr>
						<tr>
							<td>
								<label class="radio"><input type="radio" name="post[isfixed]" value="1">固定</label>
								<label class="radio"><input type="radio" name="post[isfixed]" value="0" checked>不固定</label>
							</td>
						</tr>
						<tr><th><b>文章类型</b></th></tr>
						<tr>
							<td>
								<select style="max-height: 100px;" name="post[select]">
									<option value="0" selected="selected">默认</option>
									<foreach name="select_type" item="vo">
										<option value="{$vo.cid}">{$vo.cat_name}</option>
									</foreach>
								</select>
							</td>
						</tr>
						<tr>
							<td>
								<button type="button" class="btn btn-primary btn-lg" onclick="open_content_layer('扩展属性',$('#kzModal'))" ;>扩展属性</button>
								<div id="kzModal" style="display: none;">
									<p>
										<div style="text-align: center;">
											<input type="hidden" name="extend[thumb]" id="thumb2" value="">
											<a href="javascript:upload_one_image('额外图片上传','#thumb2');">
												<img src="__TMPL__Public/assets/images/default-thumbnail.png" id="thumb2-preview" width="135" style="cursor: hand" />
											</a>
											<input type="button" class="btn btn-small" onclick="$('#thumb2-preview').attr('src','__TMPL__Public/assets/images/default-thumbnail.png');$('#thumb2').val('');return false;" value="取消图片">
										</div>
										<div style="text-align: center;">
											<input type="hidden" name="extend[thumb1]" id="thumb3" value="">
											<a href="javascript:upload_one_image('额外图片上传1','#thumb3');">
												<img src="__TMPL__Public/assets/images/default-thumbnail.png" id="thumb3-preview" width="135" style="cursor: hand" />
											</a>
											<input type="button" class="btn btn-small" onclick="$('#thumb3-preview').attr('src','__TMPL__Public/assets/images/default-thumbnail.png');$('#thumb3').val('');return false;" value="取消图片">
										</div>
									</p>
									<p>
										<label>扩展1</label>
										<input type="text" name="extend[post_extend1]" value=""  placeholder="扩展1">
									</p>
									<p>
										<label>扩展2</label>
										<input type="text" name="extend[post_extend2]" value=""  placeholder="扩展2">
									</p>
									<p>
										<label>扩展3</label>
										<input type="text" name="extend[post_extend3]" value=""  placeholder="扩展2">
									</p>
									<p>
										<label>扩展4</label>
										<input type="text" name="extend[post_extend4]" value=""  placeholder="扩展2">
									</p>
									<p>
										<label>扩展5</label>
										<textarea name="extend[post_extend5]" rows="1" cols="6"></textarea>
									</p>
									<p>
										<label>扩展6</label>
										<textarea name="extend[post_extend6]" rows="1" cols="6"></textarea>
									</p>
									<p>
										<label>扩展7</label>
										<textarea name="extend[post_extend7]" rows="1" cols="6"></textarea>
									</p>
									<p>
										<label>扩展8</label>
										<textarea name="extend[post_extend8]" rows="1" cols="6"></textarea>
									</p>
									<p>
										<label>会员活动</label>
										<label class="radio"><input type="checkbox" name="extend[activity_time]" value="1" >是否进行</label>
									</p>
								</div>
							</td>
						</tr>
						<tr><th><b>页面兼容</b></th></tr>
						<tr>
							<td>
								<select style="min-width: 200px;" name="post[compatible]">
									<option value="0">默认兼容</option>
									<option value="1">PC端</option>
									<option value="2">手机端</option>
								</select>
							</td>
						</tr>
						<tr><th><b>pc模版</b></th></tr>
						<tr>
							<td>
								<php>
									$tpl_list=sp_admin_get_tpl_file_list();
									unset($tpl_list['page']);
								</php> 
								<select style="min-width: 200px;" name="smeta[template]">
									<option value="">默认</option>
									<foreach name="tpl_list" item="vo">
									<option value="{$vo}">{$vo}{:C("TMPL_TEMPLATE_SUFFIX")}</option>
									</foreach>
								</select>
							</td>
						</tr>
						<tr><th><b>手机模版</b></th></tr>
						<tr>
							<td>
								<php>
									$tpl_list=sp_admin_get_tpl_file_list_phone();
									unset($tpl_list['page']);
								</php> 
								<select style="min-width: 200px;" name="smeta[template_phone]">
									<option value="">默认</option>
									<foreach name="tpl_list" item="vo">
									<option value="{$vo}">{$vo}{:C("TMPL_TEMPLATE_SUFFIX")}</option>
									</foreach>
								</select>
							</td>
						</tr>
						<tr><th><b>文字创意</b></th></tr>
						<tr>
							<td>
								<select style="min-width: 200px;" name="post[text_creativity]">
									<option value="">默认</option>
									<option value="1">文字创意+三图</option>
									<option value="2">文字创意+小图</option>
									<option value="3">文字创意+大图</option>
								</select>
							</td>
						</tr>
					</table>
				</div>
			</div>
			<div class="form-actions">
				<button class="btn btn-primary js-ajax-submit" type="submit">提交</button>
				<a class="btn" href="{:U('AdminPost/index')}">返回</a>
			</div>
		</form>
	</div>
	<script type="text/javascript" src="__PUBLIC__/js/common.js"></script>
	<script type="text/javascript" src="__PUBLIC__/js/content_addtop.js"></script>
	<script type="text/javascript">
		//编辑器路径定义
		var editorURL = GV.DIMAUB;
	</script>
	<script type="text/javascript" src="__PUBLIC__/js/ueditor/ueditor.config.js"></script>
	<script type="text/javascript" src="__PUBLIC__/js/ueditor/ueditor.all.min.js"></script>
	<script type="text/javascript">
		$(function() {
			$(".js-ajax-close-btn").on('click', function(e) {
				e.preventDefault();
				Wind.use("artDialog", function() {
					art.dialog({
						id : "question",
						icon : "question",
						fixed : true,
						lock : true,
						background : "#CCCCCC",
						opacity : 0,
						content : "您确定需要关闭当前页面嘛？",
						ok : function() {
							setCookie("refersh_time", 1);
							window.close();
							return true;
						}
					});
				});
			});
			/////---------------------
			Wind.use('validate', 'ajaxForm', 'artDialog', function() {
				//javascript

				//编辑器
				editorcontent = new baidu.editor.ui.Editor();
				editorcontent.render('content');
				editorcontent1 = new baidu.editor.ui.Editor();
				editorcontent1.render('pcontent');
				try {
					editorcontent.sync();
				} catch (err) {
				}
				//增加编辑器验证规则
				jQuery.validator.addMethod('editorcontent', function() {
					try {
						editorcontent.sync();
					} catch (err) {
					}
					return editorcontent.hasContents();
				});
				var form = $('form.js-ajax-forms');
				//ie处理placeholder提交问题
				if ($.browser.msie) {
					form.find('[placeholder]').each(function() {
						var input = $(this);
						if (input.val() == input.attr('placeholder')) {
							input.val('');
						}
					});
				}

				var formloading = false;
				//表单验证开始
				form.validate({
					//是否在获取焦点时验证
					onfocusout : false,
					//是否在敲击键盘时验证
					onkeyup : false,
					//当鼠标掉级时验证
					onclick : false,
					//验证错误
					showErrors : function(errorMap, errorArr) {
						//errorMap {'name':'错误信息'}
						//errorArr [{'message':'错误信息',element:({})}]
						try {
							$(errorArr[0].element).focus();
							art.dialog({
								id : 'error',
								icon : 'error',
								lock : true,
								fixed : true,
								background : "#CCCCCC",
								opacity : 0,
								content : errorArr[0].message,
								cancelVal : '确定',
								cancel : function() {
									$(errorArr[0].element).focus();
								}
							});
						} catch (err) {
						}
					},
					//验证规则
					rules : {
						'post[post_title]' : {
							required : 1
						}
					},
					//验证未通过提示消息
					messages : {
						'post[post_title]' : {
							required : '请输入标题'
						}
					},
					//给未通过验证的元素加效果,闪烁等
					highlight : false,
					//是否在获取焦点时验证
					onfocusout : false,
					//验证通过，提交表单
					submitHandler : function(forms) {
						if (formloading)
							return;
						$(forms).ajaxSubmit({
							url : form.attr('action'), //按钮上是否自定义提交地址(多按钮情况)
							dataType : 'json',
							beforeSubmit : function(arr, $form, options) {
								formloading = true;
							},
							success : function(data, statusText, xhr, $form) {
								formloading = false;
								if (data.status) {
									setCookie("refersh_time", 1);
									//添加成功
									Wind.use("artDialog", function() {
										art.dialog({
											id : "succeed",
											icon : "succeed",
											fixed : true,
											lock : true,
											background : "#CCCCCC",
											opacity : 0,
											content : data.info,
											button : [ {
												name : '继续添加？',
												callback : function() {
													reloadPage(window);
													return true;
												},
												focus : true
											}, {
												name : '返回列表页',
												callback : function() {
													location = "{:U('AdminPost/index')}";
													return true;
												}
											} ]
										});
									});
								} else {
									isalert(data.info);
								}
							}
						});
					}
				});
			});
			/*var sickhtml = "<tr id='sick'><th width='80'>选择病种</th><td><select style='max-height: 100px;' name='sick'>{$sick}</select></td></tr>";
			$("select").change(function(){
				//alert($(this).val());
				if($(this).val() == 29){
					//alert('aaa');
					$('#meau').nextAll('#sick').remove();
					$('#meau').after(sickhtml);
				}else{
					$('#meau').nextAll('#sick').remove();	
				}
			});*/
			$('input:radio[name="post[link_type]"]').click(function(){
	            var val=$('input:radio[name="post[link_type]"]:checked').val();
	            if(val==1){
	            	$('.link_type').css('display','table-row');
	            }
	            else{
	            	$('.link_type').css('display','none');
	            }
	        });
			$('input:radio[name="post[istop]"]').click(function(){
	            var val=$('input:radio[name="post[istop]"]:checked').val();
	            if(val==1){
	            	$('select[name="post[istop_type]"]').css('display','block');
	            }
	            else{
	                $('select[name="post[istop_type]"]').css('display','none');
	            }
	        });
	        $('input:radio[name="post[recommended]"]').click(function(){
	            var val=$('input:radio[name="post[recommended]"]:checked').val();
	            if(val==1){
	            	$('select[name="post[recommended_type]"]').css('display','block');
	            }
	            else{
	                $('select[name="post[recommended_type]"]').css('display','none');
	            }
	        });
	        
			////-------------------------
		});
	</script>
</body>
</html>