a {
	color: #333;
}
a:hover {
	text-decoration: none;
	color: #fff;
}
ul {
	margin: 0;
}

body {
	background-image: url(imgs/body-bcg.jpg);
}
.bcg {
	background-image: url(imgs/bcg.jpg);
	background-size: cover;
 	box-shadow: 0px 20px 40px 0px rgba(0, 0, 0, 0.05),0px 30px 60px 0px rgba(0, 0, 0, 0.1);
}
.title {
	bottom: 2.55rem;
}
.content-border {
	border: 3px solid #3a5e67;
}
.swt-btn a {
  	background-color: #ff7700;
  	box-shadow: 0px 4px 0px 0px rgba(255, 119, 0, 0.004),0px 10px 10px 0px rgba(0, 0, 0, 0.1);
}
.index-icon {
	background: url(imgs/index-icon.png);
	vertical-align: middle;
}
.text-indent {
	text-indent: 2rem;
}


.banner {
	margin-top: 205px;
}
.content-box-2 .img-box {
    top: -13px;
    left: -13px;
}
.content-box-2 .content-list>div {
  	border-style: solid;
  	border: 1px solid #bbb;
  	border-radius: 50%;
  	box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.05),0px 10px 20px 0px rgba(0, 0, 0, 0.1);
    width: 172px;
    margin: auto;
    cursor: pointer;
}
.content-box-2 .content-list .index-icon {
	width: 40px;
	height: 40px;
	top: 0;
	right: 0;
	display: none;
	background-position: 0 -30px;
}
.content-box-2 .content-list .checked .index-icon {
	display: block;
}
.content-box-2 .content-list .checked {
	border: 3px solid #3692A9;
}
.content-box-2 .content-input input, .content-box-2 .content-input .submit-btn {
	width: 84%;
}
.content-box-2 .content-input .index-icon {
	width: 20px;
	height: 20px;
	top: 1.1rem;
	left: 14%;
}
.content-box-2 .content-input p:nth-child(2) .index-icon {
	background-position: -38px 0;
}
.content-box-2 .content-input p:nth-child(3) .index-icon {
	background-position: -76px 0;
}
.content-box-2 .content-input .submit-btn {
  	background-color: rgb(255, 119, 0);
  	box-shadow: 0px 4px 0px 0px rgba(255, 85, 0, 0.004),0px 10px 10px 0px rgba(0, 0, 0, 0.1);
  	display: block;
}
.content-4-swt-btn {
  	background: linear-gradient(to right, #FFBD00, #FF7A00);
  	box-shadow: 0px 20px 20px 0px rgba(0, 0, 0, 0.1),0px 10px 10px 0px rgba(0, 0, 0, 0.1);
  	border-radius: 60px;
  	width: 30%;
  	bottom: 2rem;
    left: 0;
    right: 0;
    margin: auto;
    padding: .75rem 0;
}
.text-1 h1 {
	font-family: "DINPro";
	color: #787877;
}
.text-1 h3:after, .text-2 h3:after {
	content: '';
	position: absolute;
	width: 2.5rem;
	height: 2px;
	background: #fff;
}
.text-1 h3:after {
	left: 0;
	right: 0;
	margin: auto;
    bottom: -2rem;
}
.text-2 h3:after {
	bottom: -1.5rem;
	left: 0;
}
.text-1 {
	background: rgba(0, 0, 0, .7);
	padding-top: 40%;
}
.right-list .text-1 {
	padding-top: 15%;
}
.right-list>div {
	padding: 0 10px;
}
.right-list .bottom-img {
	margin-top: 1.2rem;
}
.text-1, .text-2 {
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
}
.text-2 {
	background: rgba(58, 94, 103, .9);
	display: none;
}
.left-list .text-2 {
	padding-top: 40% !important;
}
.left-list .text-2 h3 {
	font-size: 1.65rem;
}
.left-list>div, .right-list>div>div {
  	box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.1),0px 10px 10px 0px rgba(0, 0, 0, 0.1);
}
.content-box-5 .title {
    top: -2.5rem;
    bottom: auto;
    left: 0;
    right: 0;
    z-index: 5;
}
.swiper-pagination-bullet {
	width: 1rem;
	height: 1rem;
    margin: 0 7px;
}
.swiper-pagination-bullet-active {
    opacity: 1;
    background: #fff;
}
.footer-img {
	background: #18264d;
}
.swt-btn a:hover {
	background-color: #ff9900;
}
@keyframes move {
    0% {bottom: 2rem;}
    50% {bottom: 2.5rem;}
  100% {bottom: 2rem;}
}
.content-4-swt-btn, .swt-btn a {
	animation: move 2s .2s ease both infinite;
	-webkit-animation: move 2s .2s ease both infinite; /* Safari å’Œ Chrome */
}
.round {
  	box-shadow: 0px 20px 40px 0px rgba(0, 0, 0, 0.1),0px 10px 20px 0px rgba(0, 0, 0, 0.1);
    border-radius: 50%;
  	width: 150px;
  	height: 150px;
  	background: #4D9AAC;
  	font-size: 2.2rem;
  	line-height: 1;
    padding-top: 4%;
}
.round:hover {
  	background: #FE8C00;
}