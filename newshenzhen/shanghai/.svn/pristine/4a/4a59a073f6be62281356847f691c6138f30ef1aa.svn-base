a {
	color: #333;
}
ul {
	margin: 0;
}
i {
	display: inline-block;
}
.banner {
	margin-top: 120px;
}
.title {
	font-family: 'FZLTDHK';
	color: #f7dc2a;
	background-color: #c12a17;
}
.title span{
	font-size: 1.6rem !important;
}
.red {
	color: #ff0020;
}
.yel{
	color: #f7dc2a !important;
}
.w-30 {
	width: 30%;
}
.font-9{
	font-size: 0.9rem;
}

form input {
	border: 1px solid #99852A;
}
.content-form {
	overflow: hidden;
}
.content-form h6 b{
	font-size: 1.2rem;
}
.content-form h6:before{
	content: '';
	width: 20%;
	height: 1px;
	background: #ccc;
	position: absolute;
	top: 50%;
	left: 0;
}
.content-form h6:after{
	content: '';
	width: 20%;
	height: 1px;
	background: #ccc;
	position: absolute;
	top: 50%;
	right: 0;
}
.submit-btn {
	background-image: -moz-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
	background-image: -webkit-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
	background-image: -ms-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
	border-radius: 30px;
	font-size: 1.5rem;
}

.content-box-3,.content-box-3 h3{
	background: url(imgs/3.jpg);
}
.content-box-3 h3{
	color: #812b05;
}
.content-box-3 h3 b{
	background: #812b05;
	color: #ffc30e;
}
.content-box-3 h3:before{
	position: absolute;
	content: '';
	background: #812b05;
	height: 2px;
	width: 30%;
	left: 0;
    top: 1rem;
}
.content-box-3 h3:after{
	position: absolute;
	content: '';
	background: #812b05;
	height: 2px;
	width: 22%;
	right: 0;
    top: 3.5rem;
}


.list div h4{
	background: #812b05;
	font-size: 1.35rem;
	border-radius: 30px;
}

.content-box-4 h3{
	background-image: -moz-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
	background-image: -webkit-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
	background-image: -ms-linear-gradient( 90deg, rgb(177,16,23) 1%, rgb(223,44,22) 100%);
}
.content-box-4 h3:before{
	position: absolute;
	content: '';
	background: #fff;
	height: 2px;
	width: 30%;
	left: 0;
    top: 50%;
}
.content-box-4 h3:after{
	position: absolute;
	content: '';
	background: #fff;
	height: 2px;
	width: 30%;
	right: 0;
	top: 50%;
}
.cricle{
	width: 6px;
	height: 6px;
	border-radius: 50%;
	display: block;
	background: #fff;
}
.content-box-4 .left{
	top: 47%;
	left: 30%;
}
.content-box-4 .right{
	top: 47%;
	right: 30%;
}
.content-box-3 .cricle{
	background: #812b05;
}
.content-box-3 .left{
	top: 0.9rem;
	left: 30%;
}
.content-box-3 .right{
	top: 3.4rem;
	right: 22%;
}
input::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color:    #000;
}
input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color:    #000;
}
input::-moz-placeholder { /* Mozilla Firefox 19+ */
   color:    #000;
}
input::-ms-input-placeholder { /* Internet Explorer 10-11 */
   color:    #000;
}

.text-indent{
	text-indent: 2em;
}


.tab-ios {
	top: -3px;
	transform: translateY(-100%);
	left: 0;
	right: 0;
	transition: all ease 0.5s;
	z-index: 9999;
}

.tab-ios .tab-ios-box {
	box-shadow: 0 0 8px #666;
	border-radius: 10px;
	margin: 0 auto;
	z-index: 999;
	width: 97%;
	overflow: hidden;
}

.tab-ios .tab-wx {
	padding: 0.5% 2% 0.5% 2%;
	display: flex;
	justify-content: space-between;
	font-size: 14px;
	line-height: 30px;
	background: rgba(255, 255, 255, 1);
}

.tab-ios .tab-wx span i {
	width: 14.8%;
	margin-right: 3px;
}

.tab-ios .tab-wx span i img {
	width: 100%;
	max-width: 100%;
	height: auto;
}

.tab-ios .bot-wx {
	padding: 1% 3%;
	font-size: 14px;
	background: rgba(255, 255, 255, 0.9);
	color: #333;
}

.tab-ios .swiper-container {
	height: 21px;
}

.open {
	top: 0.5rem;
	transform: translateY(0);
}