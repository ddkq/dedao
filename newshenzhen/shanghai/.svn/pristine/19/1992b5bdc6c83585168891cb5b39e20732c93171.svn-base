.banner {
	margin-top: 120px;
}
.red {
	color: #ff0000;
}

.w-22{
	width: 22%;
	background-color: #E0E0E0;
}


.submit-btn {
	border-radius: 5px;
	background-color: #ff0000;
	padding-left: 4rem;
	padding-right: 4rem;
}

.icon {
    width: 36px;
    height: 33px;
	background: url(imgs/icon.png);
	vertical-align: middle;
}


.swi-btn{
	border: 1px dashed #ff0000;
}

.swiper-pagination-bullet{
	margin: 0 0.2rem;
	width: 12px;
	height: 12px;
	background: #d9d9d9;
	opacity: 1;
}

.swiper-pagination-bullet-active{
	background: #000000;
}
.name input, .phone input {
	width: 70%; 
	background: #E0E0E0;
	border: none;
}
.list .line {
	display: inline-block;
	width: 20%;
	height: 2px;
	background-color: #333;
	position: relative;
	bottom: 5px;
	margin: 0 10px;
}
.active {
	background-color: #c11920;
	color: #fff;
}