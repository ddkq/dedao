.banner {
	margin-top: 120px;
}
.red {
	color: #ff0000;
}

.porject span{
	width: 40%;
	background-color: #E0E0E0;
}

.age span{
	width: 33%;
	background-color: #E0E0E0;
}


.submit-btn {
	border-radius: 5px;
	background-color: #d10101;
	padding-left: 7rem;
	padding-right: 7rem;
}

.icon {
    width: 36px;
    height: 33px;
	background: url(imgs/icon.png);
	vertical-align: middle;
}


.swi-btn{
	border: 1px dashed #d10101;
}

.swiper-pagination-bullet{
	margin: 0 0.2rem;
	width: 12px;
	height: 12px;
	background: #d9d9d9;
	opacity: 1;
}

.swiper-pagination-bullet-active{
	background: #000000;
}
.name input, .phone input {
	width: 70%; 
	background: #E0E0E0;
	border: none;
}
.list .line {
	display: inline-block;
	width: 20%;
	height: 2px;
	background-color: #333;
	position: relative;
	bottom: 5px;
	margin: 0 10px;
}
.active {
	background-color: #d10101 !important;
	color: #fff;
}