.banner {
	margin-top: 205px;
}
a:hover {
	text-decoration: none;
	color: #fff;
}
ul,li{margin:0;padding:0}
.content-title {
	color: #d82034;
	border-bottom: 1px solid #DAD9D9;
}
.red {
	color: #e61128;
	margin-right: 10px;
}
.content-title:after {
	content: '';
	position: absolute;
	background: url(imgs/index-icon.png);
	width: 30px;
	height: 24px;
	bottom: -24px;
	left: 0;
	right: 0;
	margin: auto;
	background-color: #fff;
}
.content-box-1 p {
    text-indent: 2rem;
    background: url(imgs/text-bcg.png);
    background-size: cover;
}
.content-box-6 .content-text-num {
	background-color: #C31921;
	margin-right: 2%;
	font-family: 'Adobe 黑体 Std';
	position: relative;
	z-index: 2;
    width: 35px;
    font-size: 1.5rem;
}
.content-box-6 .content-text-num:after {
    content: '';
    position: absolute;
    width: 35px;
    height: 35px;
    border: 1px solid #C31921;
    bottom: -4px;
    right: -4px;
}
.arrow-left, .arrow-right {
    height: 60px;
    width: 60px;
    position: absolute;
    top: 42%;
    z-index: 99;
    border-radius: 50%;
    background-color: rgba( 0, 0, 0, 0.302 );
    cursor: pointer;
    box-shadow: 0px 10px 20px 0px rgba(0, 0, 0, 0.1), 0px 5px 10px 0px rgba(0, 0, 0, 0.1);
}
.arrow {
    width: 15px;
    height: 15px;
    display: inline-block;
    border-bottom: 2px solid #fff;
    border-left: 2px solid #fff;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 20px;
}
.arrow-left .arrow {
    transform: rotate(45deg);
    right: 0%;
}
.arrow-right .arrow {
    transform: rotate(225deg);
}
.arrow-left:hover, .arrow-right:hover {
  	background-color: rgb(177, 28, 44);
}
.arrow-left {
    right: 80%;
}
.arrow-right {
    left: 80%;
}
#certify {
	position: relative;
	width: 1200px;
	margin: 0 auto
}
#certify  .swiper-slide {
	width: 50%;
	background: #fff;
  	box-shadow: 0px 0px 21px 0px rgba(0, 0, 0, 0.46);
}
#certify  .swiper-slide p {
	line-height: 98px;
	padding-top: 0;
	text-align: center;
	color: #636363;
	font-size: 1.1em;
	margin: 0;
}
#certify .swiper-pagination {
	width: 100%;
	bottom: 20px;
}
#certify .swiper-pagination-bullets .swiper-pagination-bullet {
	margin: 0 5px;
	border: 3px solid #fff;
	background-color: #d5d5d5;
	width: 10px;
	height: 10px;
	opacity: 1;
}
#certify .swiper-pagination-bullets .swiper-pagination-bullet-active {
	border: 3px solid #00aadc;
	background-color: #fff;
}
.content-box-2, .content-box-2 .content-title:after, .content-box-4, .content-box-4 .content-title:after, .content-box-6, .content-box-6 .content-title:after {
	background-color: #ECECEC;
}
.content-box-2 .content-title, .content-box-4 .content-title, .content-box-6 .content-title {
	color: #D41827;
	border-color: #BBB9B9;
}
.content-box-2 p {
	background: #C61523;
}
.bcg-white {
	background: #fff;
	padding: 3rem;
	padding-bottom: 8rem;
}
.text {
    text-indent: 2rem;
}
.content-box-2 .img-list {
	bottom: -40px;
}
.content-box-2 .img-list li {
	width: 24%;
}
.symbol {
    width: 16rem;
    height: 20rem;
    border: 10px solid #C61523;
    border-bottom: transparent;
    top: 20px;
    right: 30px;
}
.content-box-2 .symbol {
    border-left: transparent;
}
.content-title p {
	font-size: 1.5rem;
	font-weight: 400;
}
.content-border {
  	box-shadow: 0px 0px 9px 0px rgba(0, 0, 0, 0.18);
}
.content-border>p {
    right: 2rem;
    bottom: 3rem;
    width: 60%;
}
.content-box-3 .symbol {
	left: 15px;
    border-right: transparent;
}
.content-box-4 .title {
	color: #e61128;
}
.content-box-4 .title:after, .content-box-4 .title:before {
	content: '';
	width: 10px;
	height: 10px;
	border-radius: 50%;
	border: 2px solid #e61128;
    display: inline-block;
    margin: 0 1rem;
    vertical-align: middle;
}
.content-box-4 .img-text {
	background: #C61523;
}
.content-box-4 .bcg-white {
	background: url(imgs/content-4-bcg.png);
	padding-bottom: 5rem;
}
.content-box-4 .content-form p {
	width: 60%;
	margin: 0 auto 1.5rem;
}
.content-box-4 .content-form input {
	border: 1px solid #EFEFEF;
	padding: 7px 0;
	padding-left: 5rem;
}
.content-box-4 .content-form p span {
	left: 15px;
    top: 8px;
}
.content-box-4 .submit-btn {
	color: #fff;
	background: #C61523;
	border-radius: 40px;
    padding: 5px 60px;
    font-size: 1.5rem;
}
.form-banner {
	height: 280px;
	overflow:hidden;
}
.content-box-8{
	background: url(imgs/data.jpg);
	background-size: cover;
	padding: 8rem;
}
.content-box-6 .bcg-white {
	padding: 0;
}
.doctor-name {
	left: 0;
	right: 0;
	margin: auto;
	bottom: 0;
	background: rgba(0, 0, 0, .5);
}
.doctor-name h3 {
	color: #fddf3b;
}
.doctor-name h3:after {
	content: '';
	width: 3rem;
	height: 2px;
	background: #fff;
	position: absolute;
	left: 0;
	right: 0;
	bottom: -5px;
	margin: auto;
}
.footer-form {
	background: url(imgs/footer-bcg.jpg);
	background-size: cover;
    padding: 8px 0px;
}
.footer-form form {
	bottom: 30px;
	left: 0;
	right: 0;
	margin: auto;
}
.footer-form form span {
	vertical-align: middle;
}
.footer-form input {
	border-radius: 5px;
	border: none;
	height: 34px;
	width: 70%;
}
.footer-form .submit-btn2 {
	background: #FCF854;
	border-radius: 10px;
	padding: 3px 0;
	color: #a10f14;
    width: 18%;
}
.swt:before {
	content: '';
	background: url(imgs/footer-02.jpg);
	position: absolute;
	width: 2px;
    height: 55px;
    left: -20px;
    top: 10px;
}
.content-box-4 .form-banner p {
	margin: 0 auto;
}
#copy {
    height: 168px;
}