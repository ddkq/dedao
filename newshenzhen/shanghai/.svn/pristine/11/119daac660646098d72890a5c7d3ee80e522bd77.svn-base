body {
  overflow: hidden;
}
section {
	background: url(imgs/bcg.jpg);
	width: 100%;
    background-size: cover;
}
.star-btn {
	margin: auto;
	left: 0;
	right: 0;
	width: 25%;
    bottom: 10%;
}
.title {
  	font-size: 38px;
  	font-family: "SourceHanSansCN";
  	color: rgb(174, 4, 3);
    left: 0;
    right: 0;
    margin: auto;
    width: 475px;
    top: 4%;
}
.result {
	background: rgba(0, 0, 0, .5);
	border-radius: 20px;
	width: 500px;
}
.result-img {
	bottom: 3rem;
}
.result-text {
	bottom: 2rem;
  font-size: 19px;
}
.num-box {
  width: 530px;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 45.5%;
}
.num {
	background: url(imgs/bcg3.png);
	background-size: cover;
	width: 84px;
	font-family: "SourceHanSansCN";
  line-height: 3;
}
.num i {
	font-size: 40px;
}
.star-btn a {
  background: url(imgs/star.png);
  background-size: cover;
  width: 190px;
  line-height: 2.5;
  font-size: 25px;
  color: #8c4f0f;
}
.next-time {
  right: 2rem;
  bottom: 3rem;
  font-size: 19px;
}