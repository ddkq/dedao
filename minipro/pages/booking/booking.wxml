<view class="doctor-header">
	<view class="active-date">
		<block>已选：<text>{{pickDate}}</text><text class="day">星期{{pickWeek}}</text></block>
	</view>

	<view class="date-picker">
		<view wx:for="{{calendar}}" wx:key="inx" data-key='{{index}}' class="picker {{inx == index ? 'active' : ''}}" bindtap="activeDate" data-date="{{item.date}}" data-week="{{item.week2}}">
			<view>{{item.week}}</view>
			<view style="margin-top: 5px;">{{item.date}}</view>
		</view>
	</view>
</view>

<view style="margin-top: 36%;">
	<view class="doctor" wx:for="{{doctorList}}" wx:key="inx" bindtap="goToDetail" data-data="{{item}}">
		<view class="left">
			<view class="time-icon"><image src="../../imgs/book/time.png"></image></view>
			<view>
				<view><text class="name">{{item.name}}</text><text class="job">{{item.job}}</text></view>
				<view class="time"><text>{{item.time}}</text></view>
				<view class="department"><text>{{item.category}}</text></view>
			</view>
		</view>
		<view class="price">
			<text class="num">{{item.fee}}元</text>
			<text class="arrow"></text>
		</view>
	</view>
</view>