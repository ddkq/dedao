<!--pages/book-detail/book-detail.wxml-->
<view class="container title">
	<text>挂号详情：</text>
</view>

<view class="container">
	<view class="list">
		<text class="lit-title">科室</text>
		<text class="text">{{detail.department}}</text>
	</view>

	<view class="list">
		<text class="lit-title">医生</text>
		<text class="text">{{detail.name}}</text>
	</view>

	<view class="list">
		<text class="lit-title">号类</text>
		<text class="text">{{detail.category}}</text>
	</view>

	<view class="list">
		<text class="lit-title">就诊日期</text>
		<text class="text">{{detail.date}}</text>
	</view>
	
	<view class="list">
		<text class="lit-title">就诊时间</text>
		<text class="text">{{detail.time}}</text>
	</view>

	<view class="list">
		<text class="lit-title">总费用</text>
		<text class="text">{{detail.fee}}</text>	
	</view>
</view>

<view class="container title" style="margin-top: 15px;">
	<text>患者信息：</text>
</view>

<view class="container">
	<view class="list">
		<text class="lit-title">就诊人</text>
		<input type="text" placeholder="请输入姓名" bindinput="name"/>
	</view>
	<view class="list">
		<text class="lit-title">手机号码</text>
		<input type="text" placeholder="请输入手机" bindinput="phone"/>
	</view>
</view>

<view class="container">
	<button class="submit-btn" bindtap="submitBtn">确认挂号</button>
</view>