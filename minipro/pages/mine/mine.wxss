/* pages/index/test.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
  padding-top: 20px;
  height: 125px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  	color: #fff;
  	font-size: 30rpx;
}

.usermotto {
  margin-top: 200px;
}
.mine-bcg {
	position: relative;
}
.bcg {
	position: absolute;
	width: 100%;
	height: 145px;
}
.set-head-img {
	display: block;
	width: 100px;
	height: 110px;
	margin: auto;
	opacity:0;
	position: absolute;
	padding: 0;
}
.mine-order, .more-order {
	width: 115rpx;
	height: 115rpx;
	padding: 0 60px;
}
.more-order {
	width: 155rpx;
}
.order {
	display: flex;
	padding: 25px 0;
	border-top: 18px solid #eee;
	border-bottom: 10px solid #eee;
	justify-content: center;
}