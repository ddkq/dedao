/**index.wxss**/
.link-btn {
  border-radius: 20px;
  border: 1px solid #c11920;
  color: #fff;
  background: #c11920;
  display: block;
  width: 30%;
  margin: auto;
  text-align: center;
  margin-top: 50px;
}

/*公共部分*/
image {
  vertical-align: middle;
  width: 100%;
}
.d-flex {
  display: flex;
}
.d-block {
  display: block;
}
.text-center {
  text-align: center;
}
.index-body {
  background: #DCDCDC;
}
.hospital-address, .porject, .case, .news, .area {
  padding: 15px 0;
  margin-bottom: 5px;
}
.hospital-address, .banner, .porject, .case, .news, .area {
  background: #fff;
}
.check-more {
  font-size: 12px;
  margin-top: 15px;
}
.check-more text {
  color: #999;
}
.check-more text:after, .check-more text:before {
  content: '';
  width: 30px;
  height: 1px;
  background-color: #f0f0f0;
  display: inline-block;
  margin: 0 10px;
  position: relative;
  bottom: 3.5px;
}
.us-title {
  color: #999;
  font-size: 18px;
}
.cn-title {
  font-size: 23px;
  font-weight: 600;
  margin-bottom: 15px;
}
/**/

/*医院地址*/
.hospital-address image:nth-child(3) {
  margin: 10px 0;
}
.hospital-address {
  position: relative;
}
.dots {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 6px;
  width: 100%;
  height: 15px;
  justify-content: center;
}
.dots .dot {
  width: 8px;
  height: 8px;
  background-color: #333;
  margin-left: 8px;
  background: #333;
  border-radius: 50%;
  transform: all 0.6; 
  opacity: 0.44;
}
.dots .actives {
  background-color: #c11920;
  opacity: 1;
}
/**/

/*项目导航*/
.tab-list {
  justify-content: space-around;
  padding: 0 6% 15px;
  border-bottom: 1px solid #ECECEC;
  margin-bottom: 15px;
}
.tab-list view {
  width: 13%;
}
/**/

/*专区*/
.area .d-flex {
  justify-content: space-between;
}
.area-left, .area-right {
  width: 49.5%;
}
/**/

/*项目*/
.porject .d-flex {
  justify-content: space-between;
}
.porject-left, .porject-right {
  width: 49.5%;
}
.porject-right image:last-child {
  margin-top: 2.5%;
}
/**/

/*案例*/
.case-title {
  font-size: 16px;
  color: #666;
  margin-bottom: 5px;
}
.case-list view:not(:last-child) {
  padding-bottom: 15px;
  margin-bottom: 5px;
  border-bottom: 1px solid #E2E2E2;
}
/**/

/*新闻*/
.news-list .d-flex {
  justify-content: space-between;
  margin-bottom: 15px;
}
.news-list image {
  width: 70%;
  margin-right: 15px;
}
.news-list .news-text {
  width: 100%;
}
.news-list .news-title {
  font-size: 15px;
  font-weight: bold;
  color: #57585a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}
.news-list .news-excerpt {
  color: #a0a0a0;
  font-size: 12px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
/**/